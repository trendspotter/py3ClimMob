{% extends "login.jinja2" %}

{% block css %}
    {% cssresource request,'coreresources','select2' %}
    {% cssresource request,'coreresources','icheck' %}
{% endblock css %}

{% block topScripts %}
    {% jsresource request,'coreresources','register' %}
    {% jsresource request,'coreresources','icheck' %}
{% endblock topScripts %}

{% block logintitle %}
    <title>{{ _("ClimMob | Register") }}</title>
{% endblock logintitle %}

{% block loginwelcome %}
    <h3>{{ _("Register to ClimMob") }}</h3>
{% endblock loginwelcome %}

{% block logincontent %}

    {% for key, error in error_summary.items() %}
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            {{ error }}
        </div>
    {% endfor %}

    <div class="text-left">
        <form class="m-t" role="form" method="post" action="{{ request.path }}">
            <div class="form-group">
                <label>{{ _("Full name") }}</label>
                <input type="text" class="form-control" id="user_fullname" name="user_fullname" placeholder="{{ _("Full Name") }}" required="" value="{{ data.user_fullname }}">
            </div>
            <div class="form-group">
                <label>{{ _("Email") }}</label>
                <input type="email" id="user_email" name="user_email" class="form-control" placeholder="{{ _("Email") }}" required="" value="{{ data.user_email }}">
            </div>
            <div class="form-group">
                <label>{{ _("Organization") }}</label>
                <input type="text" id="user_organization" name="user_organization" class="form-control" placeholder="{{ _("Organization") }}" required="" value="{{ data.user_organization }}">
            </div>
            <div class="form-group">
                <label>{{ _("Country") }}</label>
                <select id="user_cnty" name="user_cnty" class="form-control" required="">
                    {% for country in countries %}
                        <option value="{{ country.code }}" {% if country.code == data.user_cnty %}selected="selected"{% endif %} >{{ country.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>{{ _("Sector") }}</label>
                <select id="user_sector" name="user_sector" class="form-control" required="">
                    {% for sector in sectors %}
                        <option value="{{ sector.code }}" {% if sector.code == data.user_sector %}selected="selected"{% endif %} >{{ sector.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <hr>
            <div class="form-group">
                <label>{{ _("User Name") }}</label>
                <input type="text" class="form-control" id="user_name" name="user_name" placeholder="{{ _("User Name") }}" required="" value="{{ data.user_name }}">
            </div>
            <div class="form-group">
                <label>{{ _("Password") }}</label>
                <input type="password" id="user_password" name="user_password" class="form-control" placeholder="{{ _("Password") }}" required="">
            </div>
            <div class="form-group">
                <label>{{ _("Retype password") }}</label>
                <input type="password" id="user_password2" name="user_password2" class="form-control" placeholder="{{ _("Retype password") }}" required="">
            </div>

            <div class="form-group">
                <div class="checkbox i-checks"><label> <input id="user_policy" name="user_policy" type="checkbox"><i></i></label> <a target="_blank" href="http://climmob.net/Version_2/documentos/terminos y condiciones.pdf"><span style="color: #1ab492;">{{ _("Agree to the terms of use") }}.</span></a></div>
            </div>
            <button type="submit" name="submit" id="submit" class="btn btn-primary block full-width m-b">{{ _("Register") }}</button>

            <p class="text-muted text-center"><small>{{ _("Already have an account ?") }}</small></p>
            <a class="btn btn-sm btn-white btn-block" href="{{ request.route_url('login') }}">{{ _("Login") }}</a>
        </form>
    </div>

    <div class="modal inmodal" id="myModal2" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{ _("Close") }}</span></button>
                    <h4 class="modal-title">{{ _("Terms of service") }}</h4>
                    <small class="font-bold">{{ _("You will use ClimMob under the following terms") }}</small>
                </div>
                <div class="modal-body">
                    <p>{{ _("Here goes the terms of service") }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">{{ _("Close") }}</button>
                </div>
            </div>
        </div>
    </div>

{% endblock logincontent %}


