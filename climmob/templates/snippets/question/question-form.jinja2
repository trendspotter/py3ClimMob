<div class="form-group" id="div_submissions" {% if formdata.question_dtype == 9 or formdata.question_dtype == 10%}style="display:none" {% endif %}>
    <label class="col-sm-4 control-label">{{  _('Add to registration of participants') }}</label>
    <div class="col-sm-8">
        <input type="checkbox" id="ckb_registrationrequired"
               name="question_alwaysinreg" data-on-color="success"
               data-off-color="danger" data-on-text="{{ _('YES') }}"
               data-off-text="{{ _('NO') }}" {% if formdata.question_alwaysinreg == 'on' %} checked="" {% endif %}>
        <span class="help-block m-b-none text-left">{{ _("Always include this question in the registration of participants") }}</span>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">{{ _("Add to assessments") }}</label>
    <div class="col-sm-8">
        <input type="checkbox" id="ckb_assessmentrequired"
               name="question_alwaysinasse" data-on-color="success"
               data-off-color="danger" data-on-text="{{ _('YES') }}"
               data-off-text="{{ _('NO') }}" {% if formdata.question_alwaysinasse == 'on' %} checked="" {% endif %}>
        <span class="help-block m-b-none text-left">{{ _("Always include this question in each evaluation") }}</span>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">{{ _("Answer required") }}</label>
    <div class="col-sm-8">
        <div class="switch">
            <input type="checkbox" id="ckb_required_value"
                   name="question_requiredvalue" data-on-color="success"
                   data-off-color="danger" data-on-text="{{ _('YES') }}"
                   data-off-text="{{ _('NO') }}" {% if formdata.question_requiredvalue == 'on' %} checked="" {% endif %}>
            <span class="help-block m-b-none text-left">{{ _("This question must be filled when collecting data") }}</span>
        </div>
    </div>
</div>
