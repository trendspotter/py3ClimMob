<input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">

<div class="form-group">
    <label class="col-sm-4 control-label">{{ _('Technology name') }}</label>
    <div class="col-sm-8">
        <input type="text" class="form-control tech_id" value="{{ dataworking.tech_id }}" id="tech_id" name="tech_id" style="display: none">
        <input type="text" class="form-control" value="{{ dataworking.tech_name }}" id="tech_name" name="tech_name" required="" oninvalid="this.setCustomValidity('{{ _("Write the technology name.") }}')" onchange="this.setCustomValidity('')">
    </div>
</div>

<div class="form-group">
    <label class="col-sm-4 control-label">{{ _('This technology is a crop') }}</label>
    <div class="col-sm-8">
        <input type="checkbox" id="tech_crop" name="tech_crop" class="form-control js-switch" {% if dataworking.tech_crop == 1 %}checked{% endif %} />
    </div>
</div>
