{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob | Set performace statement") }}</title>
{% endblock title %}

{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ _("Define performace statement") }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main menu") }}</a>
                </li>
                <li >
                    <a href="{{ request.route_url('qlibrary', user_name=activeUser.login) }}">{{ _("Questions library") }}</a>
                </li>
                <li>
                    <a>{{ _("Question") }}: {{ qdata.question_desc }}</a>
                </li>
                <li class="active">
                    <strong>{{ _("Performace statement") }}</strong>
                </li>
            </ol>
            <a href="https://climmob.net/blog/wiki/2019/09/30/question-performance/" target="_blank"><img style="width: 25px; height: 25px " src="{{ request.url_for_static('static/landing/info.png') }}" alt="info"/> </a>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
{% endblock %}

{% block pagecontent %}
    {% if redirect == False %}
        <div class="row" style="height: 100%">
            <div class="col-lg-12 " style="height: 100%">
                <div class="ibox float-e-margins" style="height: 100%; margin-bottom: 0px">

                    <div class="ibox-title">
                        <h5>{{ _("Enter the performance statement for question") }} "{{ qdata.question_desc }}"</h5>
                        <div class="ibox-tools">

                        </div>
                    </div>
                    <div class="ibox-content" style="height: 89%">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <i class="fa fa-info-circle"></i>{{ _("How to describe a performance question") }}
                            </div>
                            <div class="panel-body">
                                <div style="max-height: 150px; overflow-y: scroll;">
                                    <p style="margin-bottom: 0in; line-height: 100%">{{ _("Performance is a type of question that is used to compare the technologies being tested in a project with the current one in use by the farmer. For example, if a project is evaluating three different varieties of bean then the performance questions would be:") }}</p>
                                    <ul>
                                        <li/>
                                        <p style="margin-bottom: 0in; line-height: 100%">{{ _("In terms of taste, how does variety") }} <b>A</b> {{ _("compares with the variety you usually use?") }}</p>
                                        <li/>
                                        <p style="margin-bottom: 0in; line-height: 100%">{{ _("In terms of taste, how does variety") }} <b>B</b> {{ _("compares with the variety you usually use?") }}</p>
                                        <li/>
                                        <p style="margin-bottom: 0in; line-height: 100%">{{ _("In terms of taste, how does variety") }} <b>C</b> {{ _("compares with the variety you usually use?") }}</p>
                                    </ul>
                                    <p style="margin-bottom: 0in; line-height: 100%"><a name="_GoBack"></a>
                                        {{ _("In ClimMob you define this with one statement with the wildcard") }}
                                        &#123;&#123;{{ _("option") }}&#125;&#125;. {{ _("For example:") }}</p>
                                    <ul>
                                        <li/>
                                        <p style="margin-bottom: 0in; line-height: 100%">{{ _("In terms of taste, how does") }} <b>&#123;&#123;{{ _("option") }}&#125;&#125;</b> {{ _("compares with the variety you usually use?") }}</p>
                                    </ul>
                                    <p style="margin-bottom: 0in; line-height: 100%">{{ _("The user answers it with two choices 'Better' or 'Worst'") }}</p>
                                </div>
                            </div>
                        </div>
                        {% snippet 'snippets/error.jinja2', error_summary=error_summary %}
                        <form class="form-horizontal" role="form" method="post" action="{{ request.path }}">
                            {% snippet 'snippets/question/values/perf-form.jinja2', request=request,qdata=qdata, editable=editable %}
                            <div class="text-center">
                                {% if editable %}
                                    <button type="submit" name="btn_add_char" class="btn btn-warning"> {{ _('Save performance statement') }}</button>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock pagecontent%}


{% block toastr %}
    {% if withtoastr == true %}
        {{ super() }}
    {% else %}
        {# Overwrite the toaster so it does not trigger the popup #}
    {% endif %}
{% endblock toastr %}


{% block script %}
    {% if redirect == True %}
        {# If a new question is just added or edited then redirect the mainwindo to such project #}
        <script>
            window.top.location.href = "{{ request.route_url('qlibrary', user_name=activeUser.login) }}";
        </script>
    {% endif %}
{% endblock script %}