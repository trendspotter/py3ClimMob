                <div class="ibox-content text-center">

                    <form method="post" action="{{ request.path }}">
                        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">


                        <h3>{{ _("Questions by category...") }}</h3>
                        <div class=" my-shuffle col-sm-12 " style="float: initial">
                            {% for question in UserQuestion %}
                                {% if question.user_name == 'bioversity' and activeUser.login != 'bioversity' %}
                                    {% set showLogo = True %}
                                {% endif %}
                                {% snippet 'snippets/question/question-shuffle.jinja2', request=request,question=question, showLogo=showLogo, showtools=False, showCheck=True %}
                            {% endfor %}
                        </div>
                        <div class="col-1 my-sizer-element" style="max-width: 1px; max-height: 1px"></div>
                        <br>

