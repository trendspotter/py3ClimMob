{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob - New question") }}</title>
{% endblock title %}

{% block css %}
    {% cssresource request,'coreresources','datatables' %}
    {% cssresource request,'coreresources','shuffle' %}
{% endblock css %}

{% block topScripts %}
    {% jsresource request,'coreresources','newregistryquestion' %}
    {% jsresource request,'coreresources','shuffle' %}
{% endblock topScripts %}

{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ _("New question") }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main menu") }}</a>
                </li>
                <li>
                    <a href="{{ request.route_url('assessment',projectid=projectid) }}">{{ _("Prepare data collection") }}</a>
                </li>
                <li >
                    <a href="{{ request.route_url('assessmentdetail', projectid=projectid,assessmentid=assessmentid) }}">{{  _("Data collection moment") }}: {{ assinfo.ass_desc }}</a>
                </li>
                <li class="active">
                    <strong>{{ _("Section") }}: {{ groupInfo.section_name }}</strong>
                </li>
            </ol>
            <a href="https://climmob.net/blog/wiki/2019/09/30/data-collection-moment-new-question/" target="_blank"><img style="width: 25px; height: 25px " src="{{ request.url_for_static('static/landing/info.png') }}" alt="info"/> </a>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
{% endblock %}

