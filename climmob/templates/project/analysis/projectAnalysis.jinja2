{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob | Analysis") }}</title>
{% endblock title %}

{% block css %}
    {% cssresource request,'coreresources','icheck' %}
    {% cssresource request,'coreresources','switch' %}
{% endblock css %}

{% block topScripts %}
    {% jsresource request,'coreresources','icheck' %}
    {% jsresource request,'coreresources','switch' %}
    {% jsresource request,'coreresources','analysisData' %}
{% endblock topScripts %}

{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ _("Analysis") }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ request.route_url('dashboard') }}">{{ _("Main menu") }}</a>
                </li>
                <li class="active">
                    <strong>{{ _("Analysis") }}</strong>
                </li>
            </ol>
            <a href="https://climmob.net/blog/wiki/2019/10/01/analysis/" target="_blank"><img style="width: 25px; height: 25px " src="{{ request.url_for_static('static/landing/info.png') }}" alt="info"/> </a>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
{% endblock %}

{% block pagecontent %}
    <div class="row">
        <div class="col-md-8">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ _("Select your variables to analyze") }}</h5>
                </div>
                <div class="ibox-content">
                    {% if dataForAnalysis.Explanatory %}
                        <div class="form-group">
                            <b>{{ _("Explanatory") }}</b>
                            <div class="col-lg-offset-2 col-lg-10">
                                {%for c in dataForAnalysis.Explanatory%}
                                    <label style="font-weight: inherit"> <input class="checkbox i-checks" type="checkbox" id="explanatory_{{c.id}}_add"><i></i> {{ c.name }}</label><br>
                                {%endfor%}
                                <hr>
                            </div>

                        <hr>
                        </div>
                    {% endif %}

                    {% if dataForAnalysis.Characteristics %}
                        <div class="form-group">
                            <b>{{ _("Charactheristics") }}</b>
                            <div class="col-lg-offset-2 col-lg-10">
                                {%for c in dataForAnalysis.Characteristics%}
                                    <label style="font-weight: inherit"> <input class="checkbox i-checks" type="checkbox" id="characteristic_{{c.id}}_add"><i></i> {{ c.name }}</label><br>
                                {%endfor%}
                                <hr>
                            </div>
                        </div>
                    {% endif %}

                    {% if dataForAnalysis.Performance%}
                        <div class="form-group">
                            <b>{{ _("Performance") }}</b>
                            <div class="col-lg-offset-2 col-lg-10">
                                {%for c in dataForAnalysis.Performance%}
                                    <label style="font-weight: inherit"> <input class="checkbox i-checks" type="checkbox" id="performance_{{c.id}}_add"><i></i> {{ c.name }}</label><br>
                                {%endfor%}
                                <hr>
                            </div>

                        </div>
                    {% endif %}
                    <br>
                    <div class="form-group">
                        <b>{{ _("Infosheets") }}</b>
                        <div class="col-lg-offset-2 col-lg-10">

                            <div class="form-group">
                                <input type="checkbox" id="ckb_Infosheets" name="ckb_Infosheets" data-on-color="success" data-off-color="danger" data-on-text="{{ _('YES') }}" data-off-text="{{ _('NO') }}" >
                            </div>
                        </div>

                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <div class="text-center">
                        <form method="post" class="form-horizontal" action="{{ request.path }}">
                            <input type="text" id="txt_included_in_analysis" name="txt_included_in_analysis" style="width: 100%;display:none">
                            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                            <input type="text" id="txt_infosheets" name="txt_infosheets" value="true" style="width: 100%;display:none">
                            <button type="submit" name="btn_createAnalysis" id="btn_createAnalysis" class="btn btn-primary clm-actions "> {{ _("Create analysis") }}</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock pagecontent%}


