{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob | New enumerator") }}</title>
{% endblock title %}

{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ _("Create field agent") }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ request.route_url('enumerators') }}">{{ _("Field agents") }}</a>
                </li>
                <li class="active">
                    <strong>{{ _("New field agent") }}</strong>
                </li>
            </ol>
            <a href="https://climmob.net/blog/wiki/2019/09/30/create-field-agent/" target="_blank"><img style="width: 25px; height: 25px " src="{{ request.url_for_static('static/landing/info.png') }}" alt="info"/> </a>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
{% endblock %}

{% block pagecontent %}

    <div class="row">
        <div class="col-lg-6 ">
            <div class="ibox float-e-margins " >
                <div class="ibox-title">
                    <h5>{{ _("Personal information") }}</h5>
                </div>
                <div class="ibox-content">
                    {% if error_summary %}
                        {% for key, error in error_summary.items() %}
                            <div class="alert alert-danger alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                                {{ error }}
                            </div>
                        {% endfor %}
                    {% endif %}

                    <div class="error-desc">
                        <form class="form-horizontal" role="form" method="post" action="{{ request.path }}">
                            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                            {% snippet 'snippets/enumerators/enumerator-form.jinja2', dataworking=dataworking, modify=false %}
                            <button type="submit" class="btn btn-primary pull-right" name="btn_add_enumerator"> {{ _('Add') }}</button>
                        </form>
                    </div>
                <br>
                <br>
                </div>
            </div>
        </div>
    </div>
{% endblock pagecontent%}

{% if newEnumerator == True %}
    {% block toastr %}
        {# Overwrite the toaster so it does not trigger the popup #}
    {% endblock toastr %}
{% endif %}

{% block script %}
    {% if newEnumerator == True %}
        {# If a new project is just added then redirect the mainwindo to such project #}
        <script>
            window.top.location.href = "{{ request.route_url('enumerators') }}";
        </script>
    {% endif %}
{% endblock script %}